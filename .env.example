# SOC_Intelligence Configuration

# =============================================================================
# Database Configuration
# =============================================================================
DUCKDB_PATH=./data/soc_intelligence.duckdb
DUCKDB_MEMORY_LIMIT=4GB
DUCKDB_THREADS=4

# PostgreSQL (for SOC tickets)
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DB=soc_tickets
POSTGRESQL_USER=soc_user
POSTGRESQL_PASSWORD=changeme

# Impala (for Zeek logs)
IMPALA_HOST=impala-host
IMPALA_PORT=21050
IMPALA_DATABASE=zeek_logs
IMPALA_AUTH=GSSAPI

# =============================================================================
# Analysis Configuration
# =============================================================================
ENABLE_TSHARK=true
ENABLE_ZEEK=true
ENABLE_SNORT=true
ENABLE_LLM=false

# TShark settings
TSHARK_PATH=/usr/bin/tshark
TSHARK_FIELDS_LIMIT=50

# Zeek settings
ZEEK_PATH=/usr/bin/zeek
ZEEK_SCRIPTS_DIR=/usr/share/zeek/site

# Snort settings
SNORT_PATH=/usr/bin/snort
SNORT_CONFIG=/etc/snort/snort.conf
SNORT_RULES_DIR=/etc/snort/rules

# =============================================================================
# AI/LLM Configuration
# =============================================================================
LLM_MODEL_PATH=/opt/models/mistral-7b-instruct
LLM_DEVICE=cpu
LLM_MAX_LENGTH=2048
LLM_TEMPERATURE=0.7

# =============================================================================
# Report Generation
# =============================================================================
DEFAULT_TEMPLATE=standard
OUTPUT_FORMATS=html,json,pdf
REPORT_OUTPUT_DIR=./reports
ENABLE_PDF_EXPORT=false

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=SOC_Intelligence
APP_VERSION=1.0.0
APP_ENV=development

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_MAX_UPLOAD_SIZE=200

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# =============================================================================
# Security
# =============================================================================
ENABLE_XSRF_PROTECTION=true
ENABLE_CORS=false
SECRET_KEY=change-this-to-random-secret-key

# =============================================================================
# Performance
# =============================================================================
MAX_WORKERS=4
CACHE_SIZE_MB=512
ENABLE_PROFILING=false
